{
	"name": "@remedyred/release-please-action",
	"version": "1.3.19",
	"private": true,
	"license": "MIT",
	"scripts": {
		"build": "tsup --minify",
		"build:dev": "tsup",
		"clean": "shx rm -rf dist",
		"depcheck": "depcheck",
		"dev": "tsup --watch",
		"lint": "tsc --noEmit && eslint \"**/*.{ts,json,yml,yaml}\" --cache --color",
		"lint:fix": "pnpm run lint --fix",
		"start": "nodemon",
		"types": "tsc --project ./tsconfig.types.json"
	},
	"release": {
		"extends": [
			"@snickbit/semantic-release"
		],
		"plugins": [
			[
				"@semantic-release/exec",
				{
					"prepareCmd": "tsup --minify && ncc build index.js --license licenses.txt"
				}
			],
			[
				"@semantic-release/git",
				{
					"assets": [
						"package.json",
						"index.js",
						"licenses.txt",
						"README.md"
					]
				}
			]
		]
	},
	"dependencies": {
		"@actions/core": "1.10.0",
		"@vercel/ncc": "0.34.0",
		"@actions/glob": "^0.3.0",
		"@snickbit/node-utilities": "4.4.16",
		"@snickbit/out": "2.0.48",
		"@snickbit/utilities": "3.4.15",
		"execa": "^6.1.0",
		"fast-glob": "3.2.12",
		"release-please": "14.16.0"
	},
	"devDependencies": {
		"@snickbit/eslint-config": "1.4.0",
		"@snickbit/semantic-release": "1.6.2",
		"@types/node": "18.11.9",
		"concurrently": "7.5.0",
		"eslint": "8.27.0",
		"nodemon": "2.0.20",
		"semantic-release": "19.0.5",
		"shx": "0.3.4",
		"ts-node": "^10.9.1",
		"tsup": "6.4.0",
		"typescript": "4.8.4"
	},
	"engines": {
		"node": ">= 14"
	},
	"tsup": {
		"entry": [
			"src/index.ts"
		],
		"clean": true,
		"dts": false,
		"format": [
			"cjs"
		],
		"onSuccess": "pnpm run types"
	}
}
